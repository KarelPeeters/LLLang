//before
fun %main() {
  <entry>
    %x i32 = call %foo()
    eat(%x i32)
    return
}

fun %foo(): i32 {
  <entry>
    %c i1 = blur 1 i1
    branch %c i1 <then> <else>
  <then>
    return 1 i32
  <else>
    return 2 i32
}

//after
fun %main() {
  <entry1>
    jump <foo-entry>
  <foo-entry>
    %c i1 = blur 1 i1
    branch %c i1 <foo-then> <foo-else>
  <foo-then>
    jump <entry2>
  <foo-else>
    jump <entry2>
  <entry2>
    %x i32 = phi [<foo-then>: 1 i32, <foo-else>: 2 i32]
    eat(%x i32)
    return
}